---


let allPosts = await Astro.glob('../pages/posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishedDate).valueOf() - new Date(a.frontmatter.publishedDate).valueOf());


---

<div class="post-container text-2xl w-1/2">
  {allPosts.map(post => {
   
    return (
      <div class="py-4">
        <a href={'/posts/' + post.frontmatter.slug} class="post-link">{post.frontmatter.title}</a>
        <br/>
        <span class="text-muted">{post.frontmatter.description}</span>
      </div>
    );
  })}
</div>

<style>
.post-link {
	font-family: var(--heading-font);
  font-size: 2rem;
  color:var(--secondary-color);
}

.post-container {
  display: grid;
  grid-template-rows: 1fr 1fr 1fr;
  justify-content: space-between;
  
}

</style>
